<odoo>
	<record id="plain_paper_format" model="report.paperformat">
		<field name="name">
			Plain Paper A4
		</field>
		<field name="default" eval="True" />
		<field name="format">
			A4
		</field>
		<field name="orientation">
			Portrait
		</field>
		<field name="margin_top">
			5
		</field>
		<field name="margin_bottom">
			5
		</field>
		<field name="margin_left">
			7
		</field>
		<field name="margin_right">
			7
		</field>
		<field name="header_line" eval="False" />
		<field name="header_spacing">
			35
		</field>
		<field name="dpi">
			90
		</field>
	</record>
	<record id="action_certificate_template" model="ir.actions.report">
		<field name="name">
			Validation Certificate
		</field>
		<field name="model">
			certificate
		</field>
		<field name="report_type">
			qweb-pdf
		</field>
		<field name="report_name">
			CertificateApp.certificate_template
		</field>
		<field name="report_file">
			CertificateApp.certificate_template
		</field>
		<field name="print_report_name">
			'Certificate - %s ' % (object.serial_number)
		</field>
		<field name="paperformat_id" ref="CertificateApp.plain_paper_format" />
	</record>
</odoo>
